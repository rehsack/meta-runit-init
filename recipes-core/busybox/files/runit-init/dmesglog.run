#!/bin/sh

. /etc/default/rcS
. /etc/init.d/functions-ri

serviceran ../1-localmounts || exit 1
serviceran ../1-loadmodules || exit 1
serviceup ../syslog || exit 1

if [ -f /var/log/dmesg ]; then
	if LOGPATH=$(which logrotate); then
		$LOGPATH -f /etc/logrotate-dmesg.conf
	else
		mv -f /var/log/dmesg /var/log/dmesg.old
	fi
fi
dmesg -s 131072 > /var/log/dmesg

markran

exit 0
